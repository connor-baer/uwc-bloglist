    "dotenv-webpack": "^1.5.4",
    "express": "^4.16.1",
    "fg-loadcss": "^1.3.1",
    "fontfaceobserver": "^2.0.9",
    "isomorphic-fetch": "^2.2.1",
    "ladda-cache": "^0.1.4",
    "ladda-logger": "^0.2.7",
    "lazysizes": "^3.0.0-rc4",
    "list.js": "^1.4.0",
    "loadjs": "^3.4.0",
    "lodash": "^4.17.4",
    "mappy-breakpoints": "^0.2.3",
